<%- include('partials/header.ejs') %>
<main class="main delete">
    <h1>
        <span class="firstTitle">
            Escribe una
        </span>
        <span class="secondTitle">
           Entrada
        </span>
    </h1>
    <span class="msg">
        <%= msg %>
    </span>

<% if (errors) { %>
    <p>
        Han faltado los campos:
        <% errores.input.forEach(element => { %>
          <%= element %>
        <% }) %>
    </p>
    <form method="post" action="/post/" class="updateForm" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="título" value="<%= data.title %>">
       <input type="text" name="extract" placeholder="Estracto" value="<%= data.extract %>">
       <input type="hidden" name="name" value="<%= userName %>">
       <textarea name="content" placeholder="Contenido"><%= data.content %></textarea> 
       <label for="entryImage">Imagen de la entrada</label>
       <input type="file" name="entryImage">
        <input type="text" name="category" placeholder="Categoría" value="<%= data.category %>"> 
        <input type="submit" value="Publicar">

<% } else { %>

    <form method="post" action="/post/" class="updateForm" enctype="multipart/form-data">
        <input type="text" name="title" placeholder="títuloo">
        <input type="hidden" name="name" value="<%= userName %>">
       <input type="text" name="extract" placeholder="Estracto">
       <textarea name="content" placeholder="Contenido"></textarea> 
       <label for="entryImage">Imagen de la entrada</label>
       <input type="file" name="entryImage">
        <input type="text" name="category" placeholder="Categoría"> 
        <input type="submit" value="Publicar">
   
   </form>

 <% } %>
 

</main>
<%- include('partials/footer.ejs') %>
